<div class="col-sm-6 centered-form">
    <form action="/edit-student-form" method="post">
    <div class="form-group">
        <label for="studentName">Student Name: </label>
        <input type="text" name="studentName" class="form-control" value="{{result.studentName}}">
    </div>

    <div class="form-group">
        <label for="studentBirthday">Student Birthdate: </label>
        <input type="date" name="studentBirthday" class="form-control" value="{{fixedDate}}">
    </div>

    <div class="form-group">
        <label for="studentDocumentRG">Student RG / Document: </label>
        <input type="text" name="studentDocumentRG" class="form-control" value="{{result.studentDocumentRG}}">
    </div>

    <div class="form-group">
        <label for="studentTelefoneCell">Student Cell Phone: </label>
        <input type="number" name="studentTelefoneCell" class="form-control" value="{{result.studentTelefoneCell}}">
    </div>

    <div class="form-group">
        <label for="studentTelefoneFixed">Student Fixed Phone: </label>
        <input type="number" name="studentTelefoneFixed" class="form-control" value="{{result.studentTelefoneFixed}}">
    </div>

    <div class="form-group">
        <label for="responsibleAdultName">Responsible Adult Name: </label>
        <input type="text" name="responsibleAdultName" class="form-control" value="{{result.responsibleAdultName}}">
    </div>

    <div class="form-group">
        <label for="responsibleAdultTelephone">Responsible Adult Cell Phone:</label>
        <input type="number" name="responsibleAdultTelephone" class="form-control" value="{{result.responsibleAdultTelephone}}">
    </div>

    <div class="form-group">
        <label for="studentCurrentClassGroup">Current Class:</label>
        <input type="text" name="studentCurrentClassGroup" class="form-control" value="{{result.studentCurrentClassGroup}}">
    </div>

{{!-- Unique ID and Timestamps created automatically --}}

    <button type="submit">Save Changes</button>
    </form>

    <a href ="/">
    <button name="return">Cancel</button><br><br>
    </a>
    
</div>
