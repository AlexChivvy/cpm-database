<div class="col-sm-6 centered-form">
	<form action="/student-record-form" method="post">
		<div class="form-group">
			<label for="studentName">Student Name: </label>
			<input type="text" name="studentName" class="form-control">
		</div>

		<div class="form-group">
			<label for="studentBirthday">Student Birthdate: </label>
			<input type="date" name="studentBirthday" class="form-control">
		</div>

		<div class="form-group">
			<label for="studentDocumentRG">Student RG / Document: </label>
			<input type="text" name="studentDocumentRG" class="form-control">
		</div>

		<div class="form-group">
			<label for="studentTelefoneCell">Student Cell Phone: </label>
			<input type="number" name="studentTelefoneCell" class="form-control">
		</div>

		<div class="form-group">
			<label for="studentTelefoneFixed">Student Fixed Phone: </label>
			<input type="number" name="studentTelefoneFixed" class="form-control">
		</div>

		<div class="form-group">
			<label for="responsibleAdultName">Responsible Adult Name: </label>
			<input type="text" name="responsibleAdultName" class="form-control">
		</div>

		<div class="form-group">
			<label for="responsibleAdultTelephone">Responsible Adult Cell Phone:</label>
			<input type="number" name="responsibleAdultTelephone" class="form-control">
		</div>

		<div class="form-group">
			<label for="studentCurrentClassGroup">Current Class Group:</label>
			<input type="text" name="studentCurrentClassGroup" class="form-control">
		</div>

		{{!-- Unique ID and Timestamps created automatically --}}

		<button type="submit">Submit</button>
	</form>
	
	<a href="/app">
	<button name="return">Return to Control Panel</button><br><br>
	</a>

</div>